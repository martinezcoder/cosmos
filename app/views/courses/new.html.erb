<% provide(:title, 'New course') %>
<h1>New Course</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@course) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :name %>
      <%= f.text_field :name %>

      <%= f.label :summary %>
      <%= f.text_field :summary %>

      <%= f.submit "Create my course", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
